{% extends 'layout.njk' %}

{% block head %}
  <title>Rocketseat | Cursos</title>
{% endblock head %}

{% block content %}
  <div class="title">
    <h1>
      Conte√∫dos
    </h1>
  </div>
  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="span-starter">
          <span>{{item.num}}</span>
        </div>
        <div class="card-content">
          <img src="./img/{{item.id}}.svg" alt="{{item.id}}"/>
          <h1>
            {{item.description}}
          </h1>
          <div class="card-info">
            <p class="card-modulo">
              {{item.role}}
            </p>
            <p class="card-price">{{item.price}}</p>
          </div>
        </div>
      </div>
    {% endfor %}

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <div class="modal-content">
        <div class="close-modal">
          <a>
            <i class="material-icons">close</i>
          </a>
        </div>
        <div class="maximize-modal">
          <a>
            <i class="material-icons">add</i>
          </a>
        </div>

        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  <script src="./script.js"></script>
{% endblock content %}